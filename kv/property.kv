<Simulator>:
    canvas.before:
        Color:
            rgba:.85,.85,.85,1
        Rectangle:
            pos:self.pos
            size:self.size
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
        #comment->make code block 
            id:view
            size_hint_y:0.7
            BoxLayout:
                size_hint_x:6.7
                Button:
                    text:"coding"
                    font_size:22
                    on_press:
                        root.manager.current = "coder"
                        root.manager.transition.direction = "right"

                Button:
                    text:"simulator"
                    font_size:30
                Label:
                    size_hint_x:4
            BoxLayout:
                size_hint_x:3.3

        BoxLayout:
            orientation:"vertical"
            size_hint_y:9.3
            padding:40,20
            BoxLayout:
                orientation:"vertical"
                canvas.before:
                    Color:
                        rgba:.4,.4,.4,1
                    Rectangle:
                        pos:self.pos
                        size:self.size
                Label:
                    text:"Simulator"
                    font_size:40
                    size_hint_y:1
                Label:
                    id:itext
                    text:"coding"
                    size_hint_y:7
                    canvas.before:
                        Color:
                            rgba:0,0,0,1
                        Rectangle:
                            pos:self.pos
                            size:self.size
                BoxLayout:
                    TextInput:
                        size_hint_x:7
                        readonly:True
                        font_size:20
                        foreground_color:1,1,1,1
                        background_color:0,0,0,1
                    Button:
                        text:"start"
                        font_size:30
                        on_press:app.stop()

<Slide>:
    image:image
    next_btn:next_btn
    num_of_pages:num_of_pages
    canvas.before:
        Color:
            rgba:.85,.85,.85,1
        Rectangle:
            pos:self.pos
            size:self.size
    BoxLayout:
        orientation:"vertical"
        padding:40

        BoxLayout:
            size:root.size
            size_hint_y:9.5

            BoxLayout:
                size_hint_x:1
                orientation:"vertical"
                BoxLayout:
                    size_hint_y:9
                Button:
                    text:"return"
                    size_hint_y:1
                    font_size:20
                    on_press:root.back(),root.change_text()
            Image:
                id:image
                source:root.source
                allow_strech:True
                size:self.size
                size_hint_x:8

            BoxLayout:
                size_hint_x:1
                orientation:"vertical"
                BoxLayout:
                    size_hint_y:9
                Button:
                    id:next_btn
                    text:"next"
                    size_hint_y:1
                    font_size:20
                    on_press:root.next(self),root.change_text()
        
        Label:
            id:num_of_pages
            text:"1 page"
            size:root.size
            size_hint_y:0.5
            font_size:20